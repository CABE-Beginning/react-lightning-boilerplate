{
  "name": "react-lightning-boilerplate",
  "version": "0.0.1",
  "description": "boilerplate for developing a Lightning Component With React",
  "private": true,
  "scripts": {
    "build:dx": "webpack --config webpack.prod.config.js",
    "build:mdapi": "webpack --config webpack.prod.config.js && sfdx force:source:convert -r ./force-app -d ./build -n ReactComponent",
    "deploy:mdapi": "npm run build:mdapi && sfdx force:mdapi:deploy -d ./build -w -u",
    "deploy:dx": "npm run build:dx && sfdx force:source:push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefflombard/react-lightning-boilerplate.git"
  },
  "keywords": [
    "lightning",
    "react",
    "salesforce",
    "components"
  ],
  "author": "Jeff Lombard for Eigen X",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jefflombard/react-lightning-boilerplate/issues"
  },
  "homepage": "https://github.com/jefflombard/react-lightning-boilerplate#readme",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "http-server": "^0.11.1",
    "postcss-loader": "^2.1.6",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "lightning-container": "^1.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  }
}
